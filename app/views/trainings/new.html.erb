<h3> Create a Training </h3>

<%= form_for @training do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :description %>
    <%= f.text_area :description %>
    <%= f.label :date_of_training %>
    <%= f.date_field :date %>
    <%= f.label :simroom %>
    <%= f.text_field :simroom %>

    <%= f.fields_for :equipment do |equipment_f| %>
        <%= equipment_f.label :equipment %>
        <%= equipment_f.collection_select(:equipment_id, Equipment.all, :id, :name) %>
    <% end %>

    <%= f.submit "Schedule Training" %>
<% end %>

    